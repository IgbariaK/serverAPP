
<%- include("layout", {
  user: null,
  body: `
  <div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="h4 mb-3">Register</h2>

          ${error ? `<div class="alert alert-danger">${error}</div>` : ""}

          <form method="POST" action="/register">
            <label class="form-label">Full Name</label>
            <input class="form-control mb-3" name="fullName" value="${fullName || ""}" required />

            <label class="form-label">Email</label>
            <input class="form-control mb-3" name="email" type="email" value="${email || ""}" required />

            <label class="form-label">Password</label>
            <input class="form-control mb-3" name="password" type="password" required />

            <button class="btn btn-success w-100">Create account</button>
          </form>

          <div class="mt-3 text-center">
            <span class="text-muted">Already have an account?</span>
            <a href="/login">Login instead</a>
          </div>
        </div>
      </div>
    </div>
  </div>
`}) %>
